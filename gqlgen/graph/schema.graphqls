# GraphQL schema example
#
# https://gqlgen.com/getting-started/

## Markdown

enum MarkdownAlignment {
  LEFT
  CENTER
}

type Markdown {
  contents: String
  alignment: MarkdownAlignment
}

## Image

type ImageCentered {
  width: Int
  height: Int
  path: String
  url: String
}

## Modal

enum ModalPosition {
  TOP
  CENTER
  BOTTOM
}

type Modal {
  text: String
  position: ModalPosition
}

## Column data

enum ImageDescriptionOrder {
  IMAGE_THEN_DESCRIPTION
  DESCRIPTION_THEN_IMAGE
}

## Columns

interface Column {
  _placeholder: String
}

type BackgroundImageColumn implements Column {
  _placeholder: String
  width: Int
  height: Int
  path: String
  url: String
  modal: Modal
}

type ImageDecriptionColumn implements Column {
  _placeholder: String
  description: Markdown
  image: ImageCentered
  order: ImageDescriptionOrder
}

type MarkdownColumn implements Column {
  _placeholder: String
  markdown: Markdown
}

type Query {
  columns: [Column]
  imageDescriptionColumn: ImageDecriptionColumn
  markdownColumn: MarkdownColumn
  backgroundImageColumn: BackgroundImageColumn
}
